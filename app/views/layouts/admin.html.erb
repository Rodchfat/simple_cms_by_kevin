<!DOCTYPE html>
<html>
<head>
  <title>SimpleCMS: <%=@page_title || "Admin Area" %></title>
  <%= stylesheet_link_tag('admin', media: 'all') %>
  <%= javascript_include_tag('admin', media: 'all') %>
   
</head>
<body>
<div id="header">
 <h1>Simple CMS Admin</h1>
</div>
<div id="main">
    <% if !flash[:notice].blank? %>
<div class="notice">
<%= flash[:notice] %>
</div>
<% end %>

<!-- before Yield -->
<div id="content">
<%= yield %>
</div>
</div>
<!-- After yield -->
</body>
</html>
